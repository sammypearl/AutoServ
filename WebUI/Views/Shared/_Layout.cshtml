@using Persistence.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Xtreme Ride</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <!--New Navbar start-->

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <!-- Title -->
            <span class="mdl-layout-title logo">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Xtrememodify2.png" />
                </a>
            </span>
            <!-- Add spacer, to align navigation to the right -->
            <div class="mdl-layout-spacer"></div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index"><i class="fa fa-fw fa-home"></i>Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Seller" asp-controller="Seller" asp-action="Create">Seller</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Executive)) // or seller
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Administrator
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Make" asp-action="Index">Makes</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Model" asp-action="Index">Models</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Vehicle" asp-action="Index">Vehicles</a>
                                @if (User.IsInRole(Roles.Admin))
                                {
                                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Add User</a>}
                            </div>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Services</a>
                        <div class="dropdown-menu" wfd-invisible="true">
                            <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Auto Diagnosis"></a>
                            <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Vehicle Tracking">Vehicle Tracking</a>
                            <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Pimping">Vehicle Upgrade</a>

                        </div>
                    </li>
                </ul>

                <partial name="_LoginPartial" />

            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Xtreme Ride - <a asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/NewJavaScript.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
