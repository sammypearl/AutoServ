@model IEnumerable<Models.Seller>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Seller List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Seller" asp-action="Create" class="btn btn-primary"><i class="fas fa-male"></i> Create New Seller</a>
        </div>

    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
             <thead>
                 <tr>
                     <th>
                         SellerId
                     </th>
                     <th>
                         SellerName
                     </th>
                     <th>
                         SellerTitle
                     </th>
                     <th>
                         SellerEmail
                     </th>
                     
                     <th>
                         CompanyName
                     </th>
                     <th>
                         Adress
                     </th>
                     <th>
                         SellerPhone
                     </th>
                     <th>
                         City
                     </th>
                    
                 </tr>
             </thead>
            <tbody>
                @foreach (var seller in Model)
                { 
                <tr>
                    <td width="25%">@seller.SellerId</td>
                    <td width="25%">@seller.Name</td>
                    <td width="25%">@seller.Title</td>
                    <td width="25%">@seller.SellerEmail</td>
                    <td width="25%">@seller.Company</td>
                    <td width="25%">@seller.Address</td>
                    <td width="25%">@seller.SellerPhone</td>
                    <td width="25%">@seller.City</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Seller" asp-action="Edit" asp-route-Id="@seller.SellerId" class="btn btn-primary mx-1 ">Update</a>
                            <a asp-controller="Seller" asp-action="Delete" asp-route-Id="@seller.SellerId" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    { 
        <p>No Seller Created Yet</p>
    }
</div>